<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lego Collection</title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <!-- Include the navbar partial -->
  <%- include('partials/navbar', { page: '/lego/addSet' }) %>

  <div class="container">
    <h1 class="text-5xl font-bold text-center">Add Set</h1>
    <form action="/lego/addSet" method="POST">
      <div class="form-group">
        <label for="set_num">Set Number</label>
        <input type="text" id="set_num" name="set_num" required>
      </div>
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" id="name" name="name" required>
      </div>
      <div class="form-group">
        <label for="year">Year</label>
        <input type="number" id="year" name="year" required>
      </div>
      <div class="form-group">
        <label for="num_parts">Number of Parts</label>
        <input type="number" id="num_parts" name="num_parts" required>
      </div>
      <div class="form-group">
        <label for="img_url">Image URL</label>
        <input type="url" id="img_url" name="img_url" required>
      </div>
      <div class="form-group">
        <label for="theme_id">Theme</label>
        <select id="theme_id" name="theme_id" required>
          <% themes.forEach(theme => { %>
            <option value="<%= theme.id %>"><%= theme.name %></option>
          <% }) %>
        </select>
      </div>
      <button type="submit"class="btn btn-primary">Add Set</button>
    </form>
  </div>
</body>
<script>
    // JavaScript to handle the dropdown
    document.querySelector('.dropdown summary').addEventListener('click', function () {
      document.querySelector('.dropdown-content').classList.toggle('hidden');
    });
  </script>
</body>

</html>